###### lattice variables

variable        xbas equal 1.
variable	ybas equal 1.94416
variable 	zbas equal 1.83297
variable 	pi_number equal 3.14159265358979323846

### Variables for the global box
variable	coreLz equal ${dh} 					#thicknes box n of rows
variable	boxL equal ${coreL}

variable 	Ny equal (${coreL})/${dh}			# box Y lenght
variable 	Nx equal 2*${coreL}/${dh}	 		# box X lenght
variable 	Nz equal ${coreLz}/${dh}			# box z lenght

# create geometry
variable 	a equal  (${xbas}/${dh})^2.
lattice		sq $a #${dh} #spacing .5 0.5 0.5

region		box block 0 400 0 140 0 ${Nz} units lattice
create_box	4 box
create_atoms	2 box
  
mass            * ${mass}

### Region to remove
region	     reg_1 block INF 80 INF 52 INF INF units lattice 
region	     reg_2 block INF 80 88 INF INF INF units lattice 
region	     reg_3 block 320 INF INF 52 INF INF units lattice 
region	     reg_4 block 320 INF 88 INF INF INF units lattice 
region	     c_1 cone x 0 0 0 52 215 319 units lattice
region	     c_2 cone x 140 0 0 52 215 319 units lattice

delete_atoms region reg_1
delete_atoms region reg_2
delete_atoms region reg_3
delete_atoms region reg_4
delete_atoms region c_1
delete_atoms region c_2

### Region fluid 
region	     flu_1 block INF INF 58 82 INF INF units lattice
group	     fluid_1 region flu_1
region	     flu_2 block 86 315 5 134 INF INF units lattice
group	     fluid_2 region flu_2

group	     flow union fluid_1 fluid_2
set	     group flow type 1

### Region with the slope

region	     c_3 cone x 5 0 0 52 212 315 units lattice
group	     cone_3 region c_3
set	     group cone_3 type 2

region	     c_4 cone x 134 0 0 51 212 315 units lattice
group	     cone_4 region c_4
set	     group cone_4 type 2

