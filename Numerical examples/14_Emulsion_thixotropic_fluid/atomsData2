###### lattice variables

variable        xbas equal 1.
variable	ybas equal 1.94416
variable 	zbas equal 1.83297
variable 	pi_number equal 3.14159265358979323846

### Variables for the global box
variable	coreLz equal ${dh} 					#thicknes box n of rows
variable	boxL equal ${coreL}

variable 	Ny equal ${coreL}/${dh}			# box Y lenght
variable 	Nx equal (${coreL}-2)/${dh}	 		# box X lenght
variable 	Nz equal ${coreLz}/${dh}			# box z lenght

# create geometry
variable 	a equal  (${xbas}/${dh})^2.
lattice		sq $a #${dh} #spacing .5 0.5 0.5

region		box block 0 ${Nx} 0 ${Ny} 0 ${Nz} units lattice
create_box	15 box
create_atoms	1 box
   
mass            * ${mass}

##### BOUNDARIES ###############

variable	BC_lower equal 5
variable	BC_upper equal ${Ny}-6

region	     1 block INF INF INF ${BC_lower} INF INF units lattice
group	     lower region 1

region	     2 block INF INF ${BC_upper} INF INF INF units lattice
group	     upper region 2

group	     boundary union lower upper
group	     flow subtract all boundary

set	     group boundary type 2


##### DROPLETS ###############

region	     drop_1 sphere 11 45 0.0 3.9 units lattice
group d_1 region drop_1
set	     group d_1 type 3

region	     drop_2 sphere 7 15 0.0 3.9 units lattice
group d_2 region drop_2
set	     group d_2 type 4

region	     drop_5 sphere 7 30 0.0 3.9 units lattice
group d_5 region drop_5
set	     group d_5 type 5



region	     drop_3 sphere 39 45 0.0 3.9 units lattice
group d_3 region drop_3
set	     group d_3 type 6

region	     drop_4 sphere 19 15 0.0 3.9 units lattice
group d_4 region drop_4
set	     group d_4 type 7

region	     drop_6 sphere 19 30 0.0 3.9 units lattice
group d_6 region drop_6
set	     group d_6 type 8



region	     drop_7 sphere 31 15 0.0 3.9 units lattice
group d_7 region drop_7
set	     group d_7 type 9

region	     drop_8 sphere 31 30 0.0 3.9 units lattice
group d_8 region drop_8
set	     group d_8 type 10

region	     drop_9 sphere 25 45 0.0 3.9 units lattice
group d_9 region drop_9
set	     group d_9 type 11

region	     drop_10 sphere 43 30 0.0 3.9 units lattice
group d_10 region drop_10
set	     group d_10 type 12

region	     drop_11 sphere 43 15 0.0 3.9 units lattice
group d_11 region drop_11
set	     group d_11 type 13

